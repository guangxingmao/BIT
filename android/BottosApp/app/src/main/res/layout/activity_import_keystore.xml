<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/root_bg_defalut"
    android:orientation="vertical">

    <include layout="@layout/toolbar_normal"/>

    <android.support.v7.widget.CardView
        style="@style/card_default"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:contentPaddingBottom="8dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="8dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/import_keystore_edit"
            style="@style/edit_tv"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="请输入Keystore"
            android:minHeight="200dp"
            android:singleLine="false"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/card_default"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="8dp"
        app:contentPaddingBottom="8dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="8dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/import_password_edit"
            style="@style/edit_tv"
            android:hint="请输入密码"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/import_keystore_btn"
        style="@style/teal_blue_btn"
        android:layout_marginTop="32dp"
        android:text="导入账号"/>

</LinearLayout>